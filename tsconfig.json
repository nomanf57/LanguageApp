{
    "compileOnSave": true,
    "compilerOptions": {
      "module": "es2015",
      "target": "esnext",
      "lib": ["es6", "ESNext.String"],
      "allowJs": true,
      "checkJs": true,
      "jsx": "react-native",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "rootDir": "./src",
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"],
        "tests": ["./tests/*"],
        "@app/*": ["./src/app/*"],
        "@navigation/*": ["src/navigation/*"],
        "@feature/*": ["./src/feature/*"],
        "@core/*": ["./src/core/*"],
        "@common/*": ["./src/common/*"],
      },
      "isolatedModules": true,
      "moduleResolution": "node",
      "noEmit": true
    },
    "include": ["./src/**/*"],
    "exclude": ["__tests__/**/*-test.ts", "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
  }
  